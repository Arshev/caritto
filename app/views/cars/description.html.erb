<div class="row">
  <div class="col-md-3">
    <%= render 'car_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Про автомобиль
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @car do |f| %>

            <div class="row">
              <div class="form-group">
                <label>Название авомобиля</label>
                <%= f.text_field :car_name, placeholder: "Как называется ваш автомобиль?", class: "form-control", required: true %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label>Описание</label>
                <%= f.text_area :description, rows: 5, placeholder: "Пару строк про вашу ласточку", class: "form-control", required: true %>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "Сохранить", class: "btn btn-form" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
